{
	"edit_predictions": {
		"mode": "subtle",
		"copilot": {
			"proxy": null,
			"proxy_no_verify": null,
			"enterprise_uri": null
		},
		"enabled_in_text_threads": false
	},
	"agent": {
		"default_model": {
			"provider": "copilot_chat",
			"model": "claude-3.5-sonnet"
		},
		"use_modifier_to_send": false,
		"always_allow_tool_actions": true
	},
	"features": {
		"edit_prediction_provider": "copilot"
	},
	"icon_theme": "VSCode Icons (Dark)",
	"ui_font_size": 16,
	"buffer_font_size": 15,
	"buffer_line_height": {
		"custom": 2.1
	},
	"theme": {
		"mode": "system",
		"light": "One Light",
		"dark": "One Dark"
	},
	"project_panel": {
		"indent_guides": {
			"show": "always"
		},
		"entry_spacing": "comfortable",
		"indent_size": 23,
		"auto_fold_dirs": false,
		"dock": "right"
	},
	"autosave": {
		"after_delay": {
			"milliseconds": 1000
		}
	},
	"toolbar": {
		"breadcrumbs": false,
		"quick_actions": false
	},
	"buffer_font_features": {
		"calt": false
	},
	"wrap_guides": [80],
	"tab_bar": {
		"show_nav_history_buttons": false,
		"show_tab_bar_buttons": false
	},
	"tabs": {
		"git_status": true,
		"file_icons": true
	},
	"tab_size": 4,
	"hard_tabs": true,
	"show_whitespaces": "all",
	"indent_guides": {
		"enabled": true
	},
	"gutter": {
		"breakpoints": false,
		"min_line_number_digits": 3
	},
	"file_scan_exclusions": [
		"**/.git",
		"**/.svn",
		"**/.hg",
		"**/.DS_Store",
		"**/Thumbs.db",
		"**/.vscode",
		"**/*.o",
		"compile_flags.txt"
	],
	"languages": {
		"C": {
			"format_on_save": "on",
			"enable_language_server": true,
			"formatter": {
				"external": {
					"command": "c_formatter_42",
					"arguments": ["{buffer_path}"]
				}
			}
		},
		"JSON": {
			"format_on_save": "on",
			"tab_size": 4
		}
	}
}
